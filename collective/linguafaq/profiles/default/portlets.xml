<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.linguafaq">

  <portlet
    addview="collective.linguafaq.FaqItems"
    title="Faq Items"
    description="A portlet which shows FAQ items"
    i18n:attributes="title title_faqitems_portlet;
                     description description_faqitems_portlet">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>

  <assignment
      type="collective.linguafaq.FaqItems"
      manager="plone.rightcolumn"
      category="context"
      key="/"
      name="collective.linguafaq.FaqItems"
      insert-before="*"
      >
    </assignment>

</portlets>
