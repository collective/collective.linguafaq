<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
<dl class="portlet portletFaqItems"
    i18n:domain="collective.linguafaq">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/title">[Portlet title]</span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:items tal:repeat="faqitem view/faqitems"
        tal:define="
           plone_view context/@@plone;
           toLocalizedTime nocall:plone_view/toLocalizedTime;
          ">

      <dd class="portletItem"
          tal:define="oddrow repeat/faqitem/odd"
          tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
        <a tal:attributes="href string:${faqitem/getURL}">
          <tal:title content="faqitem/Title">
            [Title]
          </tal:title>
          <span class="portletItemDetails"
                tal:content="python:toLocalizedTime(faqitem['ModificationDate'])"
                >[May 5]</span>
        </a>
      </dd>
    </tal:items>

</dl>
</html>
